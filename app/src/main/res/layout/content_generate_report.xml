<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marudhar.marudharsareecenter.GenerateReport"
    tools:showIn="@layout/activity_generate_report">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:id="@+id/generateReportParent"
        android:weightSum="1"
        android:layout_marginStart="50dp"
        android:layout_gravity="center_horizontal">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/generateReportOptionSpinner"
            android:entries="@array/generate_report"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:paddingBottom="20dp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
